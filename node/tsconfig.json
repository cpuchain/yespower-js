{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
        ],
        "target": "ES2022",
        "lib": ["ES2016", "ES2021", "ES2022", "ESNext", "DOM"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}